<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.naeemark.mylibrary.web.book.BookEdit"
        datasource="bookDs"
        focusComponent="fieldGroup"
        messagesPack="com.naeemark.mylibrary.web.book">
    <dsContext>
        <datasource id="bookDs"
                    class="com.naeemark.mylibrary.entity.Book"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="bookDs">
            <column width="250px">
                <field property="title"/>
                <field property="author_name"/>
                <field property="isbn"/>
                <field property="cover_image_url"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
